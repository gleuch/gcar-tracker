%html{:style => 'height: 100% !important; width: 100% !important;'}
  %head
    %title #{!@trip.blank? ? "#{@trip.name} | " : ''} #{configatron.site_name} | #{configatron.group_name}
    %link{:rel => 'stylesheet', :type => 'text/css', :href => '/css/app.css'}
    %script{:type => 'text/javascript', :src => "http://maps.google.com/maps?file=api&amp;v=2&amp;sensor=true&amp;key=#{configatron.gmap_key}"}
    %script{:type => 'text/javascript', :src => '/js/jquery.js'}
    %script{:type => 'text/javascript', :src => '/js/app.js'}

    %style{:type => 'text/css'}
      td.map_box {min-width: 200px !important; min-height: 200px !important;}
      html, body, .map_box {width: 100% !important; height: 100% !important;}
    %meta{:'http-equiv' => "refresh", :content => "120"}

  %body{:style => 'height: 100% !important; width: 100% !important;'}
    = yield

    = configatron.footer_code